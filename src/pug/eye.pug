extends _layout

block vars
  include _config
  - var key = "eye"
  - var page = pages[key]
  - var hiragana = "あ"
  - for (var i = 0; i < 100000; i++) { hiragana += "あ"; }

block contents
  p.eyeBackground(class="luxy-el") #{hiragana}
  div.eyeAccessCounter(class="luxy-el" data-speed-y="10")
