.eyeBackground
  color c_eye_purple_transp
  margin 0
  position relative
.eyeAccessCounter
  color c_eye_red
  font-size 150%
  font-weight 600
  position absolute
  right 0
  top: 0
  z-index 9999
  &__txt
    margin 0
  img
    width 15rem
.eyeIllust
  position absolute
  img
    height: 15rem
    width auto
  &:nth-of-type(2n+1)
    left: 0
  &:nth-of-type(2n)
    right: 0
  &:nth-of-type(1)
    top: 10rem
  &:nth-of-type(2)
    top: 25rem
    img
      height: 30rem
  &:nth-of-type(3)
    top: 55rem
  &:nth-of-type(4)
    top: 70rem
  &:nth-of-type(5)
    top: 85rem
    img
      height: 20rem
  &:nth-of-type(6)
    top: 105rem
  &:nth-of-type(7)
    top: 120rem
    img
      height: 20rem
  &:nth-of-type(8)
    top: 140rem
  &:nth-of-type(9)
    top: 155rem
  &:nth-of-type(10)
    top: 170rem

.eyeArtworkSm
  height: 8rem
  width: 8rem

.eyeArtworkLg
  height: 15rem
  width: 15rem

.eyeLuckySong
  position absolute
  top: 800vh
  &__ttl
    background-color: c_eye_yellow
    border: double 4px c_eye_blue
    color c_eye_purple
    font-size 150%
    width: 15rem
  &__stc
    color: c_eye_violet
  &__tables
    display: flex
    flex-wrap: wrap
    font-size 80%
    table
      border: solid 1px c_eye_black
      margin 1rem
      th, td
        border: solid 1px c_eye_black
        a
          color: c_eye_blue
          text-decoration: underline 1px c_eye_blue


